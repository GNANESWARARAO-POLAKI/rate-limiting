# Environment Configuration for Local Development
# Copy this to .env and modify as needed

# Application
DEBUG=true
APP_NAME="Rate Limiting Service"

# Server
HOST=0.0.0.0
PORT=8000

# Database (PostgreSQL) - Update credentials as needed
DATABASE_URL=postgresql://postgres:password@localhost:5432/ratelimit_db

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# JWT Authentication (CHANGE THIS SECRET KEY!)
SECRET_KEY=your-super-secret-key-change-this-in-production-make-it-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
DEFAULT_RATE_LIMIT=100
DEFAULT_BURST_SIZE=10
DEFAULT_REFILL_RATE=1.67

# CORS Origins (frontend URLs)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
